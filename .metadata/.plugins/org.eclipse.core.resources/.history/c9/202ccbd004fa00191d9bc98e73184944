			e.printStackTrace();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		System.out.println("Enter the shipment entity type to display");
		String shipMentEntity = br.readLine();
		System.out.println(shipMentEntity+"  "+a.length);
		/*
		 * System.out.println(shipMentEntity);
